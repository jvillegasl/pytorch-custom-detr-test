{
    "name": "Stars_DETR",
    "n_gpu": 1,

    "arch": {
        "type": "DETR",
        "args": {
            "num_classes": 1,
            "num_queries": 20
        }
    },
    "data_loader": {
        "type": "StarsDataLoader",
        "args": {
            "data_dir": "C:/Users/jvill/datasets/simple-object-detection_stars/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 1e-4,
            "weight_decay": 1e-4,
            "amsgrad": true
        }
    },
    "loss": "bipartite_matching_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 20,

        "tensorboard": true
    },
    "export": {
        "dummy_input_shape": [1, 1, 28, 28]
    }
}
